<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
  xmlns:g='urn:import:com.google.gwt.user.client.ui'
  xmlns:mail='urn:import:cscie99.team2.lingolearn.client.view'>

  <ui:style>
    .courses {
      font-style: italic;
    }
  </ui:style>

  <g:HTMLPanel>
    <h2 ui:field='courseTitle'></h2>
		
		<div class='panel panel-default'>
			<div class='panel-heading'>Course Information
      	
      </div>
      <div class='panel-body'>
          
          	<span class='instructor'>Instructor</span>
          	<a ui:field='instructor'></a>
          	<p ui:field='courseDesc'></p>
          
      </div>
		</div>
    <div class='panel panel-default'>
      <div class='panel-heading'>Assignments
      	<a class='btn btn-primary btn-xs pull-right' ui:field='addAssignmentLink'>Add</a>
      </div>
      <div class='panel-body'>
          <g:VerticalPanel ui:field='assignments'></g:VerticalPanel>
      </div>
    </div>
    
    <div class='panel panel-default'>
      <div class='panel-heading'>Analytics</div>
      <div class='panel-body'>
        <g:VerticalPanel ui:field='analytics'></g:VerticalPanel>
      </div>
    </div>

  </g:HTMLPanel>

</ui:UiBinder>
