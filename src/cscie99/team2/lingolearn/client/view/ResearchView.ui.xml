<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
  xmlns:g='urn:import:com.google.gwt.user.client.ui'
  xmlns:dp="urn:import:com.google.gwt.user.datepicker.client" 
  xmlns:mail='urn:import:cscie99.team2.lingolearn.client.view'>

  <g:HTMLPanel>
      
    <h2>Research</h2>

	<div class='panel panel-default'>
  		<div class='panel-heading'>Raw data</div>  	
  		<div class='panel-body'>
  		    <g:Button ui:field='downloadAllButton' styleName='btn btn-primary'>Download</g:Button>
  		    <g:Button ui:field='saveAllButton' styleName='btn btn-primary'>Save</g:Button>
	    </div>
	</div>
	
	<div class='panel panel-default'>
      <div class='panel-heading'>Course-specific data</div>
      <div class='panel-body'>
      	<form class="form-inline" role="form">
	      	<div class='form-group'>
		      	<div>
		      		<g:ListBox ui:field='courseList' styleName='form-control'></g:ListBox>
		      		<span>From:</span><dp:DateBox ui:field='startDate'></dp:DateBox>
		      		<span>To:</span><dp:DateBox ui:field='endDate'></dp:DateBox>
		      	</div>
		      	<div>
		      	    Flash card: 
			      	<g:Button ui:field='downloadFlashCardResponsesButton' styleName='btn btn-primary'>Download</g:Button>
		  		    <g:Button ui:field='saveFlashCardResponsesButton' styleName='btn btn-primary'>Save</g:Button>
	  		    </div>
		      	<div>
		      	    Quiz: 
			      	<g:Button ui:field='downloadQuizResponsesButton' styleName='btn btn-primary'>Download</g:Button>
		  		    <g:Button ui:field='saveQuizResponsesButton' styleName='btn btn-primary'>Save</g:Button>
	  		    </div>
  		    </div>
	  	</form>
      </div>
    </div>
	
  </g:HTMLPanel>

</ui:UiBinder>
