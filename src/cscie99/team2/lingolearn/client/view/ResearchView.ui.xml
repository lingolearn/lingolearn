<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
  xmlns:g='urn:import:com.google.gwt.user.client.ui'
  xmlns:dp="urn:import:com.google.gwt.user.datepicker.client" 
  xmlns:mail='urn:import:cscie99.team2.lingolearn.client.view'>

  <g:HTMLPanel>
      
    <h2>Research</h2>

	<div class='panel panel-default'>
  		<div class='panel-heading'>Student Summary Metrics</div>  	
  		<div class='panel-body'>
  		    <g:Button ui:field='downloadAllButton' styleName='btn btn-primary'>Prepare download</g:Button>
  		    <g:Button ui:field='saveAllButton' styleName='btn btn-primary transparent animated'>Save</g:Button>
	    </div>
	</div>
	
	<div class='panel panel-default'>
      <div class='panel-heading'>Course-specific data</div>
      <div class='panel-body'>
      	<form class="form-horizontal" role="form">
	      	<div class='form-group'>
	      		<label class='col-sm-4'>Course</label>
	      		<div class='col-sm-8'><g:ListBox ui:field='courseList' styleName='form-control'></g:ListBox></div>
	      	</div>
	      	<div class='form-group'>
	      		<label class='col-sm-4'>From</label>
	      		<div class='col-sm-8'><dp:DateBox ui:field='startDate' styleName='form-control'></dp:DateBox></div>
	      	</div>
	      	<div class='form-group'>
	      		<label class='col-sm-4'>To</label>
	      		<div class='col-sm-8'><dp:DateBox ui:field='endDate' styleName='form-control'></dp:DateBox></div>
	      	</div>
	      	<div class='form-group'>
	      		<label class='col-sm-4'>Flash card data</label>
	      		<div class='col-sm-8'>
		      		<g:Button ui:field='downloadFlashCardResponsesButton' styleName='btn btn-primary'>Prepare download</g:Button>
	  		    	<g:Button ui:field='saveFlashCardResponsesButton' styleName='btn btn-primary transparent animated'>Save</g:Button>
	  		    </div>
  		    </div>
	      	<div class='form-group'>
	      	    <label class='col-sm-4'>Quiz data</label>
	      	    <div class='col-sm-8'>
		      		<g:Button ui:field='downloadQuizResponsesButton' styleName='btn btn-primary'>Prepare download</g:Button>
	  		    	<g:Button ui:field='saveQuizResponsesButton' styleName='btn btn-primary transparent animated'>Save</g:Button>
	  		    </div>
  		    </div>
	  	</form>
      </div>
    </div>
	
  </g:HTMLPanel>

</ui:UiBinder>
