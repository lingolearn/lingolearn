<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
  xmlns:g='urn:import:com.google.gwt.user.client.ui'
  xmlns:mail='urn:import:cscie99.team2.lingolearn.client.view'>

  <ui:style>
    .courses {
      font-style: italic;
    }
  </ui:style>

  <g:HTMLPanel>

    <div class='panel panel-default'>
      <div class='panel-heading'>Available courses</div>
      <div class='panel-body'>
      	<form class="form-inline" role="form">
	      	<div class='form-group'>
	      		<g:ListBox ui:field='courseList' styleName='form-control'></g:ListBox>
	      	</div>
	      	<g:Button ui:field='enrollButton' styleName='btn btn-primary'>Enroll</g:Button>
	  	</form>
      </div>
    </div>

  </g:HTMLPanel>

</ui:UiBinder>
