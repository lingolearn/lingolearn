<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
  xmlns:g='urn:import:com.google.gwt.user.client.ui'
  xmlns:mail='urn:import:cscie99.team2.lingolearn.client.view'>

  <g:HTMLPanel>

    <g:FlowPanel ui:field='card_container' styleName='card-container'>
      <g:FlowPanel ui:field='card' styleName='card'>
        <g:FlowPanel ui:field='front' styleName='card-front'>
          <g:FlowPanel ui:field="cardFrontValue" styleName="card-value"></g:FlowPanel>
          <g:Button ui:field='flipButton' styleName='btn btn-primary btn-lg' title='Keyboard: &lt;enter&gt; or &lt;space&gt;'>Flip</g:Button>
        </g:FlowPanel>

        <g:FlowPanel ui:field='back' styleName='card-back'>
          <g:FlowPanel ui:field="cardBackValue" styleName="card-value">
          </g:FlowPanel>

          <g:FlowPanel ui:field='knowledgeAssessmentArea' styleName='btn-group'>
            <g:Button ui:field='knowledgeLow' styleName='btn btn-primary btn-lg' title='Keyboard: 1'>I had no clue</g:Button>
            <g:Button ui:field='knowledgeMedium' styleName='btn btn-primary btn-lg' title='Keyboard: 2'>I sorta knew it</g:Button>
            <g:Button ui:field='knowledgeHigh' styleName='btn btn-primary btn-lg' title='Keyboard: 3'>I definitely knew it</g:Button>
          </g:FlowPanel>

        </g:FlowPanel>
      </g:FlowPanel>
    </g:FlowPanel>

  </g:HTMLPanel>

</ui:UiBinder>
