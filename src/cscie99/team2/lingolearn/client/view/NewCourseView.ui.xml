<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
  xmlns:g='urn:import:com.google.gwt.user.client.ui'
  xmlns:mail='urn:import:cscie99.team2.lingolearn.client.view'>

  <ui:style>
    .courses {
      font-style: italic;
    }
  </ui:style>

  <g:HTMLPanel>

    <div class='panel panel-default'>
      <div class='panel-heading'>New course</div>
      <div class='panel-body'>
          <b>Name:</b> <g:TextBox ui:field='courseName'></g:TextBox>
          <br/>
          <b>Description:</b>
          <br/>
          <g:TextArea ui:field='courseDescription'></g:TextArea>
      </div>
    </div>
    
    <g:Button ui:field='createCourseButton'>Create</g:Button>

  </g:HTMLPanel>

</ui:UiBinder>
