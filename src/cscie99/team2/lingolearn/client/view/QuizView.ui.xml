<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
  xmlns:g='urn:import:com.google.gwt.user.client.ui'
  xmlns:mail='urn:import:cscie99.team2.lingolearn.client.view'>

  <g:HTMLPanel>

    <g:FlowPanel styleName='card-container'>
      	<g:FlowPanel styleName='card'>
      	
      		<g:FlowPanel ui:field='successOverlay' styleName='card-overlay card-hidden'>
      			<g:Image url="/images/checkmark.png" altText="Correct!" />
      		</g:FlowPanel>
      		
       		<g:FlowPanel ui:field='card' styleName='card-front animated'>
			    <g:FlowPanel ui:field='stemContainer' styleName='quiz-question'></g:FlowPanel>
			    
			    <g:FlowPanel ui:field='answerContainer'>
			    </g:FlowPanel>
			    
			    <g:FlowPanel>
			    	<g:Button ui:field='submitButton' styleName='btn btn-primary btn-lg' title='Keyboard: &lt;enter&gt; or &lt;space&gt;'>Submit</g:Button>
			    	<g:Button ui:field='nextButton' styleName='btn btn-default btn-lg' title='Keyboard: &lt;enter&gt; or &lt;space&gt;'>Next</g:Button>
			    </g:FlowPanel>
			    <g:FlowPanel ui:field='responseArea'> </g:FlowPanel>
	    
	    	</g:FlowPanel>
     	</g:FlowPanel>
     </g:FlowPanel>

  </g:HTMLPanel>

</ui:UiBinder>
